<% icon ||= true %>
<% text ||= false %>
<% html = [] %>
<% html << content_tag(:i, nil, class: 'bi bi-person') if icon %>
<% html << content_tag(:span, l(:label_profile)) if text %>

<%= link_to user_path(user), class: 'btn btn-success' do %>
  <%= html.compact.join('&nbsp;').html_safe %>
<% end %>