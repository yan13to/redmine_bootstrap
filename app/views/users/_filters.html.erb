<%= page_form_tag(users_path, { method: :get }) do %>
  <%= page_paragraph do %>
    <%= page_select_tag 'status', users_status_options_for_select(@status), label: l(:field_status)  %>
  <% end %>
  <%= page_paragraph do %>
    <%= page_select_tag 'group_id', content_tag('option') + options_from_collection_for_select(@groups, :id, :name, params[:group_id].to_i), label: l(:label_group) %>
  <% end if @groups.present? %>
  <%= page_paragraph do %>
    <%= page_text_field_tag 'name', params[:name], size: 30, label: l(:label_user) %>
  <% end %>
  <%= page_paragraph do %>
    <%= page_submit_tag l(:button_apply), name: nil %>
    <%= page_link_to l(:button_clear), users_path, mode: :button %>
  <% end %>
  <%= hidden_field_tag 'encoding', l(:general_csv_encoding) unless l(:general_csv_encoding).casecmp('UTF-8') == 0 %>
<% end %>