<%= fields_for :pref, @user.pref do |pref_fields| %>
  <div class="mb-3 row">
    <div class="col-auto">
      <%= pref_fields.label :hide_mail %>
    </div>
    <div class="col-auto">
      <%= pref_fields.check_box :hide_mail %>
    </div>
  </div>
  <div class="mb-3">
    <%= pref_fields.label :time_zone %>
    <%= pref_fields.time_zone_select :time_zone, nil, { include_blank: true }, class: 'form-select' %>
  </div>
  <div class="mb-3">
    <%= pref_fields.label :comments_sorting %>
    <%= pref_fields.select :comments_sorting, [[l(:label_chronological_order), 'asc'], [l(:label_reverse_chronological_order), 'desc']], {}, class: 'form-select' %>
  </div>
  <div class="mb-3 row">
    <div class="col-auto">
      <%= pref_fields.label :warn_on_leaving_unsaved %>
    </div>
    <div class="col-auto">
      <%= pref_fields.check_box :warn_on_leaving_unsaved %>
    </div>
  </div>
  <div class="mb-3">
    <%= pref_fields.label :textarea_font %>
    <%= pref_fields.select :textarea_font, textarea_font_options, {}, class: 'form-select' %>
  </div>
  <div class="mb-3">
    <%= pref_fields.label :recently_used_projects %>
    <%= pref_fields.text_field :recently_used_projects, size: 2, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= pref_fields.label :history_default_tab %>
    <%= pref_fields.select :history_default_tab, history_default_tab_options, {}, class: 'form-select' %>
  </div>
  <div class="mb-3">
    <%= pref_fields.label :toolbar_language_options %>
    <%= pref_fields.text_area :toolbar_language_options, rows: 4, class: 'form-control' %>
  </div>
<% end %>
