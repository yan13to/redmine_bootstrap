<%= page_title content_tag(:h2, page_icon('pie-chart') + '&nbsp;'.html_safe + l(:label_report_plural)) %>

<div class="row">
  <div class="col">
    <h3>
      <%= l(:field_tracker)%>&nbsp;<%= page_link_to l(:label_details), project_issues_report_details_path(@project, detail: 'tracker'), title: l(:label_details), icon: :zoom %>
    </h3>
    <%= render 'simple', data: @issues_by_tracker, field_name: 'tracker_id', rows: @trackers %>
    <h3>
      <%= l(:field_priority)%>&nbsp;<%= page_link_to l(:label_details), project_issues_report_details_path(@project, detail: 'priority'), title: l(:label_details) %>
    </h3>
    <%= render 'simple', data: @issues_by_priority, field_name: 'priority_id', rows: @priorities %>
    <h3>
      <%= l(:field_assigned_to)%>&nbsp;<%= page_link_to l(:label_details), project_issues_report_details_path(@project, detail: 'assigned_to'), title: l(:label_details) %>
    </h3>
    <%= render 'simple', data: @issues_by_assigned_to, field_name: 'assigned_to_id', rows: @assignees %>
    <h3>
      <%= l(:field_author)%>&nbsp;<%= page_link_to l(:label_details), project_issues_report_details_path(@project, detail: 'author'), title: l(:label_details) %>
    </h3>
    <%= render 'simple', data: @issues_by_author, field_name: 'author_id', rows: @authors %>
    <%= call_hook(:view_reports_issue_report_split_content_left, project: @project) %>
  </div>

  <div class="col">
    <h3>
      <%= l(:field_version)%>&nbsp;<%= page_link_to l(:label_details), project_issues_report_details_path(@project, detail: 'version'), title: l(:label_details) %>
    </h3>
    <%= render 'simple', data: @issues_by_version, field_name: 'fixed_version_id', rows: @versions %>
    <% if @project.children.any? %>
      <h3>
        <%= l(:field_subproject)%>&nbsp;<%= page_link_to l(:label_details), project_issues_report_details_path(@project, detail: 'subproject'), title: l(:label_details) %>
      </h3>
      <%= render 'simple', data: @issues_by_subproject, field_name: 'project_id', rows: @subprojects %>
    <% end %>
    <h3>
      <%= l(:field_category)%>&nbsp;<%= page_link_to l(:label_details), project_issues_report_details_path(@project, detail: 'category'), title: l(:label_details) %>
    </h3>
    <%= render 'simple', data: @issues_by_category, field_name: 'category_id', rows: @categories %>
    <%= call_hook(:view_reports_issue_report_split_content_right, project: @project) %>
  </div>
</div>
