<%= page_title title(l(:label_wiki_page_new)) %>

<%= form_for :page, @page, url: new_project_wiki_page_path(@project) do |f| %>
  <%= render_error_messages @page.errors.full_messages_for(:title) %>

  <%= f.text_form_group :title, name: 'title', size: 60, required: true, hint: "#{l(:text_unallowed_characters)}: , . / ? ; : |" %>
  <%= submit_tag(l(:label_next)) %>
<% end %>
