<h3>
  <%= l(:label_issue_plural) %>
</h3>

<div id="<%= block %>-settings">
  <%= form_tag(my_page_path, remote: true) do %>
    <%= page_paragraph do %>
      <%= page_select_tag "settings[#{block}][query_id]", content_tag("option") + options_from_collection_for_select(queries, :id, :name, settings[:query_id]), label: l(:label_query) %>
    <% end %>
    <%= page_paragraph do %>
      <%= page_submit_tag l(:button_save) %>
    <% end %>
  <% end %>
</div>
