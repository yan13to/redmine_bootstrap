<% options ||= {} %>

<% color = options.delete :color %>
<% color = 'primary' unless color # make color primary by default %>
<% outline = options.delete :outline %>
<% outline = true unless outline # make style outline by default %>
<% type = options.delete(:type) || :button %>

<% btn_type = ['btn'] %>
<% btn_type << 'outline' if outline %>
<% btn_type << color %>
<% btn_type = btn_type.join('-') %>

<% tag_class = ['btn'] %>
<% tag_class << btn_type %>
<% tag_class << options[:class] if options[:class].present? %>
<% tag_class = tag_class.join(' ') %>

<% options[:class] = tag_class %>
<% options[:type] = type %>

<%= button_tag content, options %>