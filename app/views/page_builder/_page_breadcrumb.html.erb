<% divider = options.delete(:divider) || '&raquo;'.html_safe %>

<% html_class = ['breadcrumb'] %>
<% html_class << options[:class] if options[:class].present? %>

<nav style="--bs-breadcrumb-divider: '<%= divider %>';" aria-label="breadcrumb">
  <% if content.is_a?(Array) %>
    <ol class="<%= html_class.join(' ') %>">
      <% content.each do |item| %>
        <% item_content = item[:content] %>
        <% item_options = item[:options] || {} %>
        <% item_options[:class] = item_options[:current] ? 'breadcrumb-item active' : 'breadcrumb-item' %>
        <%= content_tag :li, item_content, to_html_options(item_options) %>
      <% end %>
    </ol>
  <% else %>
    <%= content_tag :div, content, to_html_options(options) %>
  <% end %>
</nav>