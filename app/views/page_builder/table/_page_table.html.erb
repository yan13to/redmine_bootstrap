<% options ||= {} %>

<% tag_class = [] %>
<% tag_class << 'table' %>
<% tag_class << 'table-hover' %>
<% tag_class << 'align-middle' %>
<% tag_class << options[:class] if options[:class].present? %>

<% tag_class = tag_class.compact.join(' ') %>

<% options[:class] = tag_class %>

<%= content_tag :table, content, to_html_options(options) %>