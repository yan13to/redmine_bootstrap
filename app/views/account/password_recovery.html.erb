<%= page_card class: 'mx-auto w-25 shadow' do %>
  <%= image_tag '/plugin_assets/redmine_bootstrap/images/logo.png', class: 'mx-auto d-block', style: 'height:62px !important;' %>
  <%= page_heading :h3, l(:label_password_lost), class: 'text-center' %>
  <%= error_messages_for 'user' %>
  <%= page_form_tag lost_password_path do %>
    <%= hidden_field_tag 'token', @token.value %>
    <%= page_paragraph do %>
      <% hint = [l(:text_caracters_minimum, count: Setting.password_min_length)] %>
      <% hint << l(:text_characters_must_contain, character_classes: Setting.password_required_char_classes.collect{ |c| l("label_password_char_class_#{c}") }.join(", ")) if Setting.password_required_char_classes.any? %>
      <%= page_password_field_tag 'new_password', nil, size: 25, label: l(:field_new_password), required: true, hint: hint.join(' ').html_safe %>
    <% end %>
    <%= page_paragraph do %>
      <%= page_password_field_tag 'new_password_confirmation', nil, size: 25, label: l(:field_password_confirmation), required: true %>
    <% end %>
    <%= page_paragraph class: 'd-grid gap-2' do %>
      <%= page_submit_tag l(:button_save) %>
    <% end %>
  <% end %>
<% end %>