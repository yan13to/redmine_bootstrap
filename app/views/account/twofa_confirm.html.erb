<%= page_card class: 'mx-auto w-25 shadow' do %>
  <%= image_tag '/plugin_assets/redmine_bootstrap/images/logo.png', class: 'mx-auto d-block', style: 'height:62px !important;' %>
  <%= page_heading :h3, l(:setting_twofa), class: 'text-center' %>
  <%= page_paragraph l('twofa_label_enter_otp'), class: 'text-center' %>
  <%= page_form_tag { action: 'twofa' } do -%>
    <% labels = [l('twofa_label_code')] %>
    <% labels << page_link_to(l('twofa_resend_code'), { controller: 'account', action: 'twofa_resend' }, method: :post) if @twofa_view[:resendable] %>
    <%= page_text_field_tag :twofa_code, nil, tabindex: '1', autocomplete: 'off', autofocus: true, label: labels.compact.join(' ') -%>
    <%= page_submit_tag l(:button_login), tabindex: '2', name: :submit_otp -%>
  <% end %>
<% end %>