<div class="card mx-auto w-25 shadow" id="login-form">
  <div class="card-body">
    <h3 class="card-title text-center">
      <%= l(:label_password_lost) %>
    </h3>

    <%= form_tag(lost_password_path) do %>
      <div class="mb-3 form-group">
        <label for="mail">
          <%= l(:field_mail)%> <span class="required">*</span>
        </label>
        <%= text_field_tag 'mail', nil, size: 40, class: 'form-control' %>
      </div>

      <div class="mb-3 d-grid gap-2">
        <%= submit_tag l(:button_submit), class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>