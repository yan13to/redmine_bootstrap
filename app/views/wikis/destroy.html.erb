<%= page_title page_heading :h2, l(:label_confirmation) %>

<%= page_alert heading: "#{@project.name} #{l(:text_wiki_destroy_confirmation)}" do %>
  <%= page_form_tag({controller: 'wikis', action: 'destroy', id: @project}) do %>
    <%= hidden_field_tag "confirm", 1 %>
    <%= page_submit_tag l(:button_delete) %>
    <%= page_link_to l(:button_cancel), :back %>
  <% end %>
<% end %>
