<tr>
  <td>
    <%= link_to tracker.name, edit_tracker_path(tracker) %>
  </td>
  <td>
    <%= tracker.default_status.name %>
  </td>
  <td>
    <%= tracker.description %>
  </td>
  <td>
    <% unless tracker.workflow_rules.exists? %>
      <span class="icon icon-warning">
        <%= l(:text_tracker_no_workflow) %> (<%= link_to l(:button_edit), workflows_edit_path(tracker_id: tracker) %>)
      </span>
    <% end %>
  </td>
  <td class="buttons">
    <%= reorder_handle(tracker) %>
    <%= link_to l(:button_copy), new_tracker_path(copy: tracker), :class => 'icon icon-copy' %>
    <%= delete_link tracker_path(tracker) %>
  </td>
</tr>