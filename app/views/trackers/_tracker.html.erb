<%= page_table_tr do %>
  <%= page_table_td page_link_to(tracker.name, edit_tracker_path(tracker)) %>
  <%= page_table_td tracker.default_status.name %>
  <%= page_table_td tracker.description %>
  <%= page_tabld_td do %>
    <span class="icon icon-warning">
      <%= l(:text_tracker_no_workflow) %> (<%= link_to l(:button_edit), workflows_edit_path(tracker_id: tracker) %>)
    </span>
  <% end unless tracker.workflow_rules.exists? %>
  <%= page_table_td do %>
    <div class="btn-group">
      <%= reorder_handle(tracker) %>
      <%= page_link_to l(:button_copy), new_tracker_path(copy: tracker), icon: :copy, mode: :button %>
      <%= delete_link tracker_path(tracker), icon: :delete, mode: :button %>
    </div>
  <% end %>
<% end %>