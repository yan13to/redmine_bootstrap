<% if User.current.allowed_to?(:add_issues, @project, global: true) && (@project.nil? || Issue.allowed_target_trackers(@project).any?) %>
  <%= link_to l(:label_issue_new), _new_project_issue_path(@project), class: 'btn btn-success' %>
<% end %>

<div>
  <button id="btnGroupIssueAction" type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
    <%= l(:button_actions) %>
  </button>
  <ul class="dropdown-menu">
    <% if @project %>
      <li>
        <%= link_to l(:field_summary), project_issues_report_path(@project), class: 'dropdown-item' %>
      </li>
    <% end %>

    <% if User.current.allowed_to?(:import_issues, @project, global: true) %>
      <li>
        <%= link_to l(:button_import), new_issues_import_path(project_id: @project), class: 'dropdown-item' %>
      </li>
    <% end %>

    <% if User.current.allowed_to?(:manage_categories, @project) %>
      <li>
        <%= link_to_if_authorized l(:label_settings), { controller: 'projects', action: 'settings', id: @project, tab: 'issues' }, class: 'dropdown-item' %>
      </li>
    <% end %>
  </ul>
</div>