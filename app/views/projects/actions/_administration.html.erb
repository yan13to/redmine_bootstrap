<% icon = defined?(icon) ? icon : true %>
<% text = defined?(text) ? text : false %>

<% btn_class ||= 'btn' %>
<% btn_label ||= l(:label_administration) %>

<% html = [] %>
<% html << page_icon(:gear) if icon %>
<% html << content_tag(:span, btn_label) if text %>

<%= link_to admin_projects_path, 'data-bs-toggle': 'tooltip', title: btn_label, class: btn_class do %>
  <%= html.compact.join('&nbsp;').html_safe %>
<% end %>