<%= error_messages_for @group %>

<div class="mb-3">
  <%= f.text_field :name, required: true, size: 60, disabled: !@group.safe_attribute?('name'), class: 'form-control'  %>
</div>

<% @group.custom_field_values.each do |value| %>
  <div class="mb-3">
    <%= custom_field_tag_with_label :group, value %>
  </div>
<% end %>
