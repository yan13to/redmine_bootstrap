<%= page_table_tr id: "auth-source-#{source.id}" do %>
  <%= page_table_td do %>
    <%= page_link_to source.name, edit_auth_source_path(source) %>
  <% end %>
  <%= page_table_td do %>
    <%= source.auth_method_name %>
  <% end %>
  <%= page_table_td do %>
    <%= source.host %>
  <% end %>
  <%= page_table_td do %>
    <%= source.users.count %>
  <% end %>
  <%= page_table_td class: 'hstack gap-3' do %>
    <%= page_link_to l(:button_test), try_connection_auth_source_path(source), icon: 'bullseye' %>
    <%= page_link_to l(:button_delete), auth_source_path(source), icon: 'trash', method: :delete %>
  <% end %>
<% end %>