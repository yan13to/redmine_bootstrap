<% icon = icon.nil? ? true : icon %>
<% text = text.nil? ? false : text %>
<% html = [] %>
<% html << content_tag(:i, nil, class: 'bi bi-pencil') if icon %>
<% html << content_tag(:span, source.name) if text %>

<%= link_to edit_auth_source_path(source), class: 'text-decoration-none' do %>
  <%= html.compact.join('&nbsp;').html_safe %>
<% end %>