<% icon = icon.nil? ? true : icon %>
<% text = text.nil? ? false : text %>
<% btn_label = l(:button_apply) %>
<% btn_class = 'btn btn-success' %>
<% icon_class = 'bi bi-plus' %>
<% html = [] %>
<% html << content_tag(:i, nil, class: icon_class) if icon %>
<% html << content_tag(:span, btn_label) if text %>

<%= link_to '#', onclick: 'javascript:this.form.submit();return false;', class: btn_class, title: btn_label do %>
  <%= html.compact.join('&nbsp;').html_safe %>
<% end %>