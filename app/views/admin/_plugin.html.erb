<%= page_table_tr id: "plugin-#{plugin.id}" do %>
  <%= page_table_td do %>
    <%= content_tag('span', plugin.name) %>
    <%= content_tag('span', plugin.description) unless plugin.description.blank? %>
    <%= content_tag('span', page_link_to(plugin.url, plugin.url)) unless plugin.url.blank? %>
  <% end %>
  <%= page_table_td do %>
    <%= plugin.author_url.blank? ? plugin.author : page_link_to(plugin.author, plugin.author_url) %>
  <% end %>
  <%= page_table_td do %>
    <%= plugin.version %>
  <% end %>
  <%= page_table_td do %>
    <%= page_link_to l(:button_configure), plugin_settings_path(plugin) if plugin.configurable? %>
  <% end %>
<% end %>