<%= page_form_tag({}, method: :get) do %>
  <%= page_paragraph do %>
    <%= page_select_tag 'status', project_status_options_for_select(@status), label: l(:field_status)  %>
  <% end %>
  <%= page_paragraph do %>
    <%= page_text_field_tag 'name', params[:name], size: 30, label: l(:label_project) %>
  <% end %>
  <%= page_paragraph do %>
    <%= page_submit_tag l(:button_apply), name: nil %>
    <%= page_link_to l(:button_clear), admin_projects_path, mode: :button %>
  <% end %>
<% end %>