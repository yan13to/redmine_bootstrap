<% html_title(l(:label_information_plural)) -%>

<%= page_title page_heading(:h2, [page_icon(:info), l(:label_information_plural)].join('&nbsp;').html_safe) %>
<%= page_card do %>
  <%= page_paragraph do %>
    <strong><%= Redmine::Info.versioned_name %></strong>
  <% end %>
  <%= page_table do %>
    <%= page_table_tbody do %>
      <% @checklist.each do |label, result| %>
        <%= render 'info', label: label, result: result %>
      <% end %>
    <% end %>
  <% end %>
  <%= page_paragraph do %>
    <pre><%= Redmine::Info.environment %></pre>
  <% end %>
<% end %>
