<% html_title(l(:label_information_plural)) -%>

<%= page_title content_tag(:h2, l(:label_information_plural)) %>

<%= page_card do %>
  <p>
    <strong><%= Redmine::Info.versioned_name %></strong>
  </p>
  <table class="table">
    <% @checklist.each do |label, result| %>
      <tr>
        <td>
          <%= label.is_a?(Symbol) ? l(label) : label %>
        </td>
        <td>
          <span class="icon-only <%= (result ? 'icon-ok' : 'icon-error') %>"></span>
        </td>
      </tr>
    <% end %>
  </table>
  <br />
  <div>
    <pre><%= Redmine::Info.environment %></pre>
  </div>
<% end %>