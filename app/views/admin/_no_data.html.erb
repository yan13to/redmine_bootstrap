<%= form_tag({action: 'default_configuration'}) do %>
  <%= simple_format(l(:text_no_configuration_data)) %>

  <div class="mb-3">
    <label><%= l(:field_language) %></label>
    <%= select_tag 'lang', options_for_select(lang_options_for_select(false), current_language.to_s), {}, class: 'form-select' %>
  </div>

  <div class="mb-3">
    <%= submit_tag l(:text_load_default_configuration) %>
  </div>
<% end %>
