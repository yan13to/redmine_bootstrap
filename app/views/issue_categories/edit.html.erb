<%= page_heading :h2, l(:label_issue_category) %>

<%= page_card do %>
  <%= labelled_form_for @category, as: :issue_category, url: issue_category_path(@category), html: { method: :put } do |f| %>
    <%= render 'issue_categories/form', f: f %>
    <%= page_submit_tag l(:button_save) %>
  <% end %>
<% end %>