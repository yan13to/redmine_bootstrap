<%= page_heading :h3, l(:label_issue_category_new) %>

<%= labelled_form_for @category, as: 'issue_category', url: project_issue_categories_path(@project), remote: true do |f| %>
  <%= render 'issue_categories/form', f: f %>
  <%= page_paragraph do %>
    <%= page_submit_tag l(:button_create), name: nil %>
    <%= link_to_function l(:button_cancel), "hideModal(this);" %>
  <% end %>
<% end %>
