<%= page_title page_heading :h2, import_title %>

<%= page_card do %>
  <%= page_form_tag(imports_path, multipart: true) do %>
    <%= hidden_field_tag 'type', @import.type %>
    <%= hidden_field_tag 'project_id', params[:project_id] %>
    <%= page_heading :h4, "#{l(:label_select_file_to_import)} (CSV)" %>
    <%= page_paragraph do %>
      <%= file_field_tag 'file' %>
    <% end %>
    <%= page_paragraph do %>
      <%= page_submit_tag l(:label_next).html_safe + " &#187;".html_safe, name: nil %>
    <% end %>
  <% end %>
  <%= render_if_exist partial: "#{import_partial_prefix}_sidebar" %>
<% end %>