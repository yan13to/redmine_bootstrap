<%= board_breadcrumb(@message) %>

<% label = "#{avatar(@topic.author)} #{@topic.subject}" %>
<%= page_title content_tag(:h2, label) %>

<%= form_for @message, { as: :message, url: { action: 'edit' }, html: { multipart: true, method: :post } } do |f| %>
  <%= render 'form', f: f, replying: !@message.parent.nil? %>
  <%= submit_tag l(:button_save) %>
<% end %>
