<% label = [link_to(@board.name, { controller: 'boards', action: 'show', project_id: @project, id: @board }, class: 'text-decoration-none'), l(:label_message_new)].join(' &#187; ').html_safe %>

<%= page_title content_tag(:h2, label) %>

<%= form_for @message, url: { action: 'new' }, html: { multipart: true }, builder: BootstrapFormBuilder do |f| %>
  <%= render 'form', f: f %>
  <%= submit_tag l(:button_create) %>
<% end %>
