<%= page_title title(l(:label_custom_field_plural)) do %>
  <%= link_to_function l(:label_custom_field_new), "location.href = '#{new_custom_field_path}?tab=' + encodeURIComponent(($('.tabs a.selected').attr('id')||'').split('tab-').pop())", :class => 'icon icon-add' %>
<% end %>

<% if @custom_fields_by_type.present? %>
  <%= render 'page_tab', tabs: CustomFieldsHelper::CUSTOM_FIELDS_TABS.select { |h| @custom_fields_by_type.keys.include?(h[:name]) }, default_tab: 'IssueCustomField' %>
<% else %>
  <%= page_empty %>
<% end %>
